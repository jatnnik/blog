---
import About from '@/components/widgets/About.astro'
import PostList from '@/components/widgets/PostList.astro'
import { siteConfig } from '@/config'
import IndexLayout from '@/layouts/IndexLayout.astro'

import { getSortedPosts } from '@/utils/posts'

const posts = await getSortedPosts({ limit: 5 })
---

<IndexLayout title={siteConfig.title} description={siteConfig.description}>
  <About />
  <PostList {posts} heading="Recent Writing" showReadMore />
</IndexLayout>
